<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Verity.SDK</PackageId>
    <Version>1.0.0</Version>
    <Authors>Verity</Authors>
    <Company>Verity</Company>
    <Description>.NET SDK for Verity API - Medicare coverage policies and prior authorization</Description>
    <PackageTags>verity;medicare;healthcare;prior-authorization;medical-codes</PackageTags>
    <PackageProjectUrl>https://verity.backworkai.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tylerbryy/verity-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
